#:kivy 2.1.0


<StyleTransferImageRow>:
    BoxLayout:
        orientation: "horizontal"

        StyleTransferImage:
            image_file: "../resources/content/chihuahua.jpg"
            size_x: 100
            size_y: 100

        StyleTransferImage:
            image_file: "../resources/content/chihuahua.jpg"
            size_x: 300
            size_y: 100

        StyleTransferImage:
            image_file: "../resources/style/cubism.jpg"
            size_x: 500
            size_y: 100


<StyleTransferImage>:
    Image:
        source: root.image_file
        size: (root.size_x, root.size_y)


<StyleTransferBase>:
    background_color: (255, 255, 0)

    StyleTransferImageRow:
        center_y: root.top

    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: "0"

    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"
